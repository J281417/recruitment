<Window x:Class="recruitment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:recruitment"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1080">
    
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <TextBlock FontSize="20" FontWeight="Bold">iProjectManagement</TextBlock>
        </StackPanel>

        <!-- Left: Contractors and add/remove -->
        <GroupBox Header="Contractors" Grid.Column="0" Grid.Row="1" Margin="0,0,171,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Margin="5,0,0,0">

                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Search:"/>
                            <!--<TextBox x:Name="TxtSearchContractors" Width="200" Margin="0,5,5,5"  TextChanged="TxtSearchContractors_TextChanged"/>-->
                            <TextBox x:Name="TxtSearchContractors" Width="200" Margin="0,5,5,5"  />
                            <StackPanel Orientation="Vertical" Margin="20,0,0,0">
                                <!--<Button x:Name="BtnRemoveContractor" Content="Remove Selected" Width="150" Click="BtnRemoveContractor_Click" Margin="0,5,0,5"/>-->
                                <Button x:Name="BtnRemoveContractor" Content="Remove Selected" Width="150" Margin="0,5,0,5"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal">
                            <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5">
                            <Expander Header="Add Contractor" IsExpanded="False" Margin="10,0,10,0"  Width="275">
                                <StackPanel Orientation="Vertical" Margin="0,5,0,5">
                                    <StackPanel Orientation="Horizontal">
                                        <Label Content="First Name:"/>
                                        <TextBox x:Name="TxtFirstName" Width="200" Margin="0,0,5,5"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Label Content="Last Name:"/>
                                        <TextBox x:Name="TxtLastName" Width="200" Margin="0,0,5,5"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,5,5">
                                        <Label Content="Start Date:"/>
                                        <DatePicker x:Name="DpStartDate" Width="100" SelectedDate="{x:Static sys:DateTime.Now}"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,5,5">
                                        <Label Content="Hourly Wage ($):"/>
                                        <TextBox x:Name="TxtHourlyWage" Width="100"/>
                                    </StackPanel>


                                    <Button x:Name="BtnAddContractor" Content="Add Contractor" Width="150" Click="BtnAddContractor_Click"/>
                                        <!--<Button x:Name="BtnAddContractor" Content="Add Contractor" Width="150"/>-->
                                    </StackPanel>
                            </Expander>
                            </Border>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <!--<CheckBox x:Name="ChkShowAvailable" Content="Available" Checked="ChkShowAvailable_Changed" Unchecked="ChkShowAvailable_Changed"/>-->
                                <CheckBox x:Name="ChkShowAvailable" Content="Available" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            
                    <ListView x:Name="LvContractors" Grid.Row="1" Margin="5" SelectionMode="Single">
                        <ListView.View>
                            <GridView>
                            <GridViewColumn Header="First Name" DisplayMemberBinding="{Binding FirstName}" Width="75"/>
                            <GridViewColumn Header="Last Name" DisplayMemberBinding="{Binding LastName}" Width="75"/>
                            <GridViewColumn Header="Start Date" DisplayMemberBinding="{Binding StartDate, StringFormat={}{0:dd/MM/yyyy}}" Width="75"/>
                            <GridViewColumn Header="Wage (/hr)" DisplayMemberBinding="{Binding HourlyWage, StringFormat={}{0:F2}}" Width="100"/>
                            <GridViewColumn Header="Assigned" DisplayMemberBinding="{Binding IsAssigned}" Width="100"/>
                        </GridView>
                        </ListView.View>
                    </ListView>
            </Grid>
        </GroupBox>

        <!-- Right: Jobs, create, assign -->
        <GroupBox Header="Jobs" Grid.Row="1" Grid.ColumnSpan="2" Margin="469,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Margin="5">
                   <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Search:"/>
                            <!--<TextBox x:Name="TxtSearchJobs" Width="150" Margin="0,5,5,5"  TextChanged="TxtSearchJobs_TextChanged"/>-->
                            <TextBox x:Name="TxtSearchJobs" Width="150" Margin="0,5,5,5" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5">
                                <Expander Header="Create Job" IsExpanded="False" Margin="10,0,10,0"  Width="275">
                                    <StackPanel Orientation="Vertical" Margin="0,5,0,5">
                                        <StackPanel Orientation="Horizontal">
                                            <Label Content="Title:"/>
                                            <TextBox x:Name="TxtJobTitle" Width="200" Margin="0,0,5,5" />
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <Label Content="Description:"/>
                                            <TextBox x:Name="TxtJobDescription" Width="200" Margin="0,0,5,5" />
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,5,5">
                                            <Label Content="Cost"/>
                                            <TextBox x:Name="TxtJobCost" Width="200" Margin="0,0,5,5"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,5,5">
                                            <Label Content="Date"/>
                                            <DatePicker x:Name="DpJobDate" Width="100" SelectedDate="{x:Static sys:DateTime.Now}"/>
                                        </StackPanel>
                                        <!--<Button x:Name="BtnCreateJob" Content="Create Job" Width="200" Click="BtnCreateJob_Click"/>-->
                                        <Button x:Name="BtnCreateJob" Content="Create Job" Width="200"/>
                                    </StackPanel>
                                </Expander>
                            </Border>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <StackPanel Orientation="Vertical">
                                    <!--<Button x:Name="BtnAssign" Content="Assign Contractor to Job" Width="250" Click="BtnAssign_Click" Margin="0,0,5,5"/>-->
                                    <Button x:Name="BtnAssign" Content="Assign Contractor to Job" Width="250"  Margin="0,0,5,5"/>
                                    <!--<Button x:Name="BtnCompleteJob" Content="Complete Selected Job" Width="250" Click="BtnCompleteJob_Click"  Margin="0,0,5,5"/>-->
                                    <Button x:Name="BtnCompleteJob" Content="Complete Selected Job" Width="250"  Margin="0,0,5,5"/>
                                    <!--<CheckBox x:Name="ChkShowUnassignedJobs" Content="Unassigned" Checked="ChkShowUnassignedJobs_Changed" Unchecked="ChkShowUnassignedJobs_Changed"  Margin="0,0,5,5"/>-->
                                    <CheckBox x:Name="ChkShowUnassignedJobs" Content="Unassigned" Margin="0,0,5,5"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>


                <ListView x:Name="LvJobs" Grid.Row="1" Margin="5" SelectionMode="Single">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Title" Width="160" DisplayMemberBinding="{Binding Title}"/>
                            <GridViewColumn Header="Cost" Width="80" DisplayMemberBinding="{Binding Cost}"/>
                            <GridViewColumn Header="Assigned To" Width="160" DisplayMemberBinding="{Binding AssignedContractorName}"/>
                            <GridViewColumn Header="Date"  Width="75" DisplayMemberBinding="{Binding JobDate, StringFormat={}{0:dd/MM/yyyy}}"/>
                            <GridViewColumn Header="Completed" Width="75" DisplayMemberBinding="{Binding IsCompleted}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </GroupBox>

        <!-- Bottom panel: Report -->
        <GroupBox Header="Reports" Grid.ColumnSpan="2" Grid.Row="2" Margin="0,10,0,0">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="4*"/>
                </Grid.ColumnDefinitions>

                <!-- Filter Jobs by Cost-->
                <StackPanel Grid.Column="0">
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <StackPanel Orientation="Vertical">
                            <Label Content="Jobs by cost:"/>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="From: "/>
                                <TextBox x:Name="TxtCostMin" Width="75" Margin="0,0,5,5"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="To: "/>
                                <TextBox x:Name="TxtCostMax" Width="75" Margin="0,0,5,5"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <!--<Button x:Name="BtnSearchCost" Content="Search" Click="BtnSearchCost_Click" Margin="5,0,5,5"/>-->
                                <Button x:Name="BtnSearchCost" Content="Search" Margin="5,0,5,5"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!-- Report Result -->
                <StackPanel x:Name="SpReport" Grid.Column="1">
                    <ListBox x:Name="LbCostResults" Height="{Binding ActualHeight, ElementName=SpReport}" Width="{Binding ActualWidth, ElementName=SpReport}"   DisplayMemberPath="Title"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
